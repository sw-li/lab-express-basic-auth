{{!-- views/auth/login.hbs --}}

<div id="form">
  <form action="/login" method="POST">
    <div class="form-group">
      <label> Username</label>
      <input type="text" name="username" class="form-control" placeholder="ironhacker" value="{{username}}" required />
    </div>

    <div class="form-group">
      <label> Password </label>
      <input type="password" name="password" class="form-control" placeholder="********" value="" required />
    </div>
    <br>
    <div class="form-group">
      <button type="submit" class="btn btn-success">let's go</button>
      {{#if errorMessage}}
      <h6 class="form-text text-danger">{{errorMessage}}</h6>
      {{/if}}
    </div>
  </form>
</div>