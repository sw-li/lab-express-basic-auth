{{!-- views/auth/login.hbs --}}

<div id="form">
  <h2>Log in</h2>
  <form action="/login" method="POST">

    <label> Username
      <input type="text" name="username" placeholder="ironhacker" value="{{username}}" required/>
    </label>

    <label> Password
      <input type="password" name="password" placeholder="********" value="" required />
    </label>

    <button type="submit" class="btn btn-success">let's go</button>

    {{!-- error message will be added here --}}
    <div>
    {{#if errorMessage}}
      <h6 class="text-danger">{{errorMessage}}</h6>
    {{/if}}
    </div>

  </form>
</div>
